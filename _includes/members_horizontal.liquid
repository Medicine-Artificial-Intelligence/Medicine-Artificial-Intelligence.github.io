<div class="col mb-4">
  <a href="{% if member.redirect %}{{ member.redirect }}{% else %}{{ member.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      <div class="row no-gutters">
        {% if member.img %}
          <div class="col-md-6">
            {% include figure.liquid loading="eager" path=member.img sizes="(min-width: 768px) 156px, 50vw" alt="member thumbnail" class="card-img" %}
          </div>
        {% endif %}
        <div class="{% if member.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title">{{ member.title }}</h3>
            <p class="card-text" style="color: var(--global-card-text-color);">{{ member.description }}</p>
            <div class="row ml-1 mr-1 p-1 justify-content-center">
              {% if member.website %}
                <div class="mx-2 website-icon">
                  <div class="icon" data-toggle="tooltip" title="Homepage: {{ member.website }}">
                    <a href="{{ member.website }}"><i class="fa-solid fa-house-chimney"></i></a>
                  </div>
                </div>
              {% endif %}
              {% if member.email %}
                <div class="mx-2 email-icon">
                  <div class="icon" data-toggle="tooltip" title="Email: {{ member.email }}">
                    <a href="mailto:{{ member.email }}"><i class="fa-solid fa-envelope"></i></a>
                  </div>
                </div>
              {% endif %}
              {% if member.github %}
                <div class="mx-2 github-icon">
                  <div class="icon" data-toggle="tooltip" title="Github: {{ member.github }}">
                    <a href="https://github.com/{{ member.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
                  </div>
                  {% if member.github_stars %}
                    <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                      <i class="fa-solid fa-star"></i>
                      <span id="{{ member.github_stars }}-stars"></span>
                    </span>
                  {% endif %}
                </div>
              {% endif %}
              {% if member.linkedin %}
                <div class="mx-2 linkedin-icon">
                  <div class="icon" data-toggle="tooltip" title="LinkedIn: {{ member.linkedin }}">
                    <a href="https://www.linkedin.com/in/{{ member.linkedin }}"><i class="fa-brands fa-linkedin"></i></a>
                  </div>
                </div>
              {% endif %}
              {% if member.orcid %}
                <div class="mx-2 orcid-icon">
                  <div class="icon" data-toggle="tooltip" title="ORCID: {{ member.orcid }}">
                    <a href="https://orcid.org/{{ member.orcid }}"><i class="ai ai-orcid"></i></a>
                  </div>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
